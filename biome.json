{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"app/**",
			"server/**",
			"*.ts",
			"*.vue",
			"*.js",
			"!!dist",
			"!!node_modules",
			"!!.output",
			"!!.nuxt",
			"!!content",
			"!!data",
			"!!.github",
			"!!.data",
			"!!public",
			"!pnpm-lock.yaml"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "off",
				"noUnusedImports": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"noImportantStyles": "off"
			},
			"a11y": {
				"useGenericFontNames": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	}
}
